{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"SeventySix.Client": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"root": "",
			"sourceRoot": "src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular/build:application",
					"options": {
						"browser": "src/main.ts",
						"tsConfig": "tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"allowedCommonJsDependencies": [
							"shimmer",
							"protobufjs/minimal",
							"qrcode"
						],
						"assets": [
							{
								"glob": "**/*",
								"input": "public"
							},
							{
								"glob": "manifest.webmanifest",
								"input": "public",
								"output": "/"
							},
							{
								"glob": "ngsw-config.json",
								"input": "./",
								"output": "/"
							}
						],
						"styles": ["src/styles.scss"],
						"stylePreprocessorOptions": {
							"includePaths": ["src/app/shared/styles"]
						}
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "2MB",
									"maximumError": "4MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "10kB",
									"maximumError": "12kB"
								}
							],
							"outputHashing": "all",
							"serviceWorker": "ngsw-config.json",
							"optimization": {
								"scripts": true,
								"styles": {
									"minify": true,
									"inlineCritical": true
								},
								"fonts": true
							}
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.development.ts"
								}
							]
						},
						"e2e": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.e2e.ts"
								}
							]
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular/build:dev-server",
					"options": {
						"ssl": true,
						"sslCert": "ssl/dev-certificate.crt",
						"sslKey": "ssl/dev-certificate.key"
					},
					"configurations": {
						"production": {
							"buildTarget": "SeventySix.Client:build:production"
						},
						"production-local": {
							"buildTarget": "SeventySix.Client:build:production-local"
						},
						"development": {
							"buildTarget": "SeventySix.Client:build:development"
						},
						"e2e": {
							"buildTarget": "SeventySix.Client:build:e2e",
							"ssl": false
						}
					},
					"defaultConfiguration": "development"
				},
				"extract-i18n": {
					"builder": "@angular/build:extract-i18n"
				},
				"test": {
					"builder": "@angular/build:karma",
					"options": {
						"tsConfig": "tsconfig.spec.json",
						"inlineStyleLanguage": "scss",
						"browsers": "ChromeHeadless",
						"assets": [
							{
								"glob": "**/*",
								"input": "public"
							},
							{
								"glob": "ngsw-config.json",
								"input": "./",
								"output": "/"
							}
						],
						"styles": ["src/styles.scss"],
						"stylePreprocessorOptions": {
							"includePaths": ["src/app/shared/styles"]
						},
						"codeCoverage": true,
						"codeCoverageExclude": [
							"src/**/*.spec.ts",
							"src/app/testing/**"
						],
						"fileReplacements": [
							{
								"replace": "src/environments/environment.ts",
								"with": "src/environments/environment.test.ts"
							}
						]
					}
				}
			}
		}
	}
}
