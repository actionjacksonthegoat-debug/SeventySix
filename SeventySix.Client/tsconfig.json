/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
	"compileOnSave": false,
	"compilerOptions": {
		"strict": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "ES2022",
		"module": "preserve",
	"baseUrl": "./",
	"paths": {
		"@infrastructure/*": ["src/app/infrastructure/*"],
		"@assets/*": ["src/app/assets/*"],
		"@features/*": ["src/app/features/*"],
		"@shared/*": ["src/app/shared/*"],
		"@environments/*": ["src/environments/*"],
		"@testing": ["src/app/testing"],
		"@testing/*": ["src/app/testing/*"],

		// Admin feature and sub-features
		"@admin": ["src/app/features/admin"],
		"@admin/*": ["src/app/features/admin/*"],
		"@admin/logs": ["src/app/features/admin/logs"],
		"@admin/logs/*": ["src/app/features/admin/logs/*"],
		"@admin/users": ["src/app/features/admin/users"],
		"@admin/users/*": ["src/app/features/admin/users/*"],
		"@admin/permission-requests": ["src/app/features/admin/permission-requests"],
		"@admin/permission-requests/*": ["src/app/features/admin/permission-requests/*"],
		"@admin/admin-dashboard": ["src/app/features/admin/admin-dashboard"],
		"@admin/admin-dashboard/*": ["src/app/features/admin/admin-dashboard/*"],
		"@admin/error-pages": ["src/app/features/admin/error-pages"],
		"@admin/error-pages/*": ["src/app/features/admin/error-pages/*"],

		// Home feature and sub-features
		"@home": ["src/app/features/home"],
		"@home/*": ["src/app/features/home/*"],
		"@home/home-page": ["src/app/features/home/home-page"],
		"@home/home-page/*": ["src/app/features/home/home-page/*"],

		// Game feature
		"@game": ["src/app/features/game"],
		"@game/*": ["src/app/features/game/*"],

		// Developer feature
		"@developer": ["src/app/features/developer"],
		"@developer/*": ["src/app/features/developer/*"],

		// Sandbox feature
		"@sandbox": ["src/app/features/sandbox"],
		"@sandbox/*": ["src/app/features/sandbox/*"]
	}
	},
	"angularCompilerOptions": {
		"enableI18nLegacyMessageIdFormat": false,
		"strictInjectionParameters": true,
		"strictInputAccessModifiers": true,
		"typeCheckHostBindings": true,
		"strictTemplates": true
	},
	"files": [],
	"references": [
		{
			"path": "./tsconfig.app.json"
		},
		{
			"path": "./tsconfig.spec.json"
		}
	]
}
