/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
	"compileOnSave": false,
	"compilerOptions": {
		"strict": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true,
		"isolatedModules": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "ES2022",
		"module": "preserve",
	"baseUrl": "./",
	"paths": {
		// ============================================================
		// DOMAIN ALIASES (bounded contexts in domains/)
		// ============================================================
		"@admin": ["src/app/domains/admin"],
		"@admin/*": ["src/app/domains/admin/*"],
		"@sandbox": ["src/app/domains/sandbox"],
		"@sandbox/*": ["src/app/domains/sandbox/*"],
		"@auth": ["src/app/domains/auth"],
		"@auth/*": ["src/app/domains/auth/*"],
		"@account": ["src/app/domains/account"],
		"@account/*": ["src/app/domains/account/*"],
		"@home": ["src/app/domains/home"],
		"@home/*": ["src/app/domains/home/*"],
		"@developer": ["src/app/domains/developer"],
		"@developer/*": ["src/app/domains/developer/*"],

		// ============================================================
		// SHARED ALIAS (truly shared code only)
		// ============================================================
		"@shared/*": ["src/app/shared/*"],
		"@shared/pages": ["src/app/shared/pages"],
		"@shared/pages/*": ["src/app/shared/pages/*"],
		"@shared/generated-open-api": ["src/app/shared/generated-open-api"],
		"@shared/generated-open-api/*": ["src/app/shared/generated-open-api/*"],
		"@shared/layout": ["src/app/shared/components/layout"],
		"@shared/layout/*": ["src/app/shared/components/layout/*"],
		"@shared/services": ["src/app/shared/services"],
		"@shared/services/*": ["src/app/shared/services/*"],

		// ============================================================
		// TESTING (convenience alias for @shared/testing)
		// ============================================================
		"@testing": ["src/app/shared/testing"],
		"@testing/*": ["src/app/shared/testing/*"],

		// ============================================================
		// UTILITY ALIASES
		// ============================================================
		"@assets/*": ["src/app/assets/*"],
		"@environments/*": ["src/environments/*"]
	}
	},
	"angularCompilerOptions": {
		"enableI18nLegacyMessageIdFormat": false,
		"strictInjectionParameters": true,
		"strictInputAccessModifiers": true,
		"typeCheckHostBindings": true,
		"strictTemplates": true
	},
	"files": [],
	"references": [
		{
			"path": "./tsconfig.app.json"
		},
		{
			"path": "./tsconfig.spec.json"
		}
	]
}
