{
	"$schema": "https://dprint.dev/schemas/v0.json",
	"lineWidth": 120,
	"indentWidth": 4,
	"useTabs": true,
	"newLineKind": "lf",
	"typescript": {
		"quoteStyle": "alwaysDouble",
		"semiColons": "always",
		"trailingCommas": "never",
		"operatorPosition": "nextLine",
		"memberExpression.linePerExpression": true,
		"binaryExpression.linePerExpression": true,
		"arrowFunction.useParentheses": "force",
		"preferSingleLine": false,
		"bracePosition": "nextLine",
		"nextControlFlowPosition": "nextLine",
		"module.sortImportDeclarations": "caseInsensitive",
		"module.sortExportDeclarations": "caseInsensitive",
		"arguments.preferSingleLine": false,
		"parameters.preferSingleLine": false,
		"typeParameters.preferSingleLine": false,
		"objectExpression.preferSingleLine": false,
		"arrayExpression.preferSingleLine": false,
		"functionExpression.spaceBeforeParentheses": false
	},
	"json": {
		"trailingCommas": "never",
		"indentWidth": 4,
		"useTabs": true
	},
	"malva": {
		"printWidth": 120,
		"indentWidth": 4,
		"useTabs": true,
		"quotes": "alwaysDouble"
	},
	"includes": [
		"src/**/*.{ts,js,json,scss,css}",
		"e2e/**/*.ts",
		"load-testing/lib/**/*.js",
		"load-testing/scenarios/**/*.js",
		"load-testing/scripts/generate-summary.js",
		"load-testing/config/**/*.json"
	],
	"excludes": [
		"node_modules",
		"dist",
		"coverage",
		".angular",
		"src/app/infrastructure/api/generated-api.ts",
		"load-testing/node_modules",
		"load-testing/reports",
		"load-testing/results"
	],
	"plugins": [
		"https://plugins.dprint.dev/typescript-0.95.13.wasm",
		"https://plugins.dprint.dev/json-0.21.0.wasm",
		"https://plugins.dprint.dev/g-plane/malva-v0.14.0.wasm"
	]
}
