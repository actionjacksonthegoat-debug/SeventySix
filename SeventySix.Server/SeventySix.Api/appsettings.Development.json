{
	"Logging": {
		"LogLevel": {
			"Default": "Warning",
			"Microsoft.AspNetCore": "Warning",
			"Microsoft.EntityFrameworkCore.Database.Command": "Warning",
			"SeventySix": "Warning"
		}
	},
	"OpenTelemetry": {
		"OtlpEndpoint": "http://localhost:4317"
	},
	"Security": {
		"EnforceHttps": false,
		"AllowHttpForHealthChecks": true,
		"AllowHttpForMetrics": true,
		"AllowHttpForOpenApi": true
	},
	"Testing": {
		"RunIntegrationTests": false
	},
	"WhitelistedPermissions": {
		"Grants": [
			{
				"Email": "developer@seventysix.local",
				"Roles": ["Developer"]
			}
		]
	},
	"Cache": {
		"OutputCache": {
			"Policies": {
				"users": {
					"DurationSeconds": 5,
					"Enabled": false
				},
				"logs": {
					"DurationSeconds": 5,
					"Enabled": false
				},
				"health": {
					"DurationSeconds": 5,
					"Enabled": false
				},
				"thirdpartyrequests": {
					"DurationSeconds": 5,
					"Enabled": false
				}
			}
		}
	},
	"Email": {
		"Enabled": true,
		"ClientBaseUrl": "http://localhost:4200",
		"FromAddress": "PLACEHOLDER_USE_USER_SECRETS",
		"Queue": {
			"Enabled": true,
			"ProcessingIntervalSeconds": 10,
			"BatchSize": 10,
			"MaxAttempts": 3,
			"RetryDelayMinutes": 1,
			"DeadLetterAfterHours": 24
		}
	},
	"ThirdPartyApiLimits": {
		"DefaultDailyLimit": 1000,
		"Enabled": true,
		"Limits": {
			"BrevoEmail": {
				"DailyLimit": 250,
				"Enabled": true
			}
		}
	}
}
